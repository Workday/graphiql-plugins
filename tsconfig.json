{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    // https://github.com/microsoft/TypeScript/pull/54567
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "strict": false,
    "allowJs": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "buildOptions": {
    "verbose": true
  },
  "references": [
    {
      "path": "tests/test-utils"
    },
    {
      "path": "packages/graphiql-plugin-multipart-requests"
    },
    {
      "path": "example"
    }
  ]
}
